- htitle '老师问答'

- hbreadcrumb '首页', '/'
- hbreadcrumb '老师问答', '/questions'
- hbreadcrumb @question.title

.page-model-show
  .field.title
    %label 标题
    .v= @question.title

  .field.desc
    %label 问题
    .v= @question.content

  - if !@question.answer.blank?
    .field
      %label 答案
      .v= @question.answer.content

  - else

    - if current_user.is_teacher?
      .page-form
        = flash_info
        = form_for Answer.new, :url => "/questions/#{@question.id}/answers" do |f|

          .field.need
            %label 答案
            = f.text_area :content

          .field
            = jfsubmit '回复'
            = jfcancel '取消'

.page-admin-go-back= link_to '返回列表页', '/questions'
.page-admin-edit= link_to '编辑修改', "/questions/#{@question.id}/edit"