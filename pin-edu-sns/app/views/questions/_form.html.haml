
.field.need
  %label 标题
  = f.text_field :title

.field.need
  %label 问题
  = f.text_area :content

.field.need
  %label 选择老师
  - # current_user.courses.map {|course| course.teacher_users}.flatten.uniq.each do |teacher|
  - Teacher.all.each do |teacher|
    = f.radio_button :teacher_user_id, teacher.user_id
    = teacher.real_name


.field
  = jfsubmit '确定'
  = jfcancel '取消'