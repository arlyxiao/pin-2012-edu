- hbreadcrumb '首页', '/'
- hbreadcrumb '师生问答'

.generic-page-head.questions
  .btns
    .page-tabs
      :ruby
        klass1 = params[:type].blank? ? 'current' : ''
        klass2 = params[:type] == 'answered' ? 'current' : ''
        klass3 = params[:type] == 'unanswered' ? 'current' : ''

      %a.tab{:href=>"/questions", :class => klass1} 全部
      %a.tab{:href=>"/questions?type=answered", :class => klass2} 已回答
      %a.tab{:href=>"/questions?type=unanswered", :class => klass3} 未回答

    - if current_user.is_student?
      %a.generic-new{:href=>"/questions/new"} 提问题

  = list_pagination(@questions)

  .cells
    .cell.title= sortable 'title', '标题'
    .cell.teacher 教师
    .cell.answered= sortable 'has_answered', '回答状态'

.generic-body-list.questions
  - if @questions.blank?
    .blank
      目前列表内没有内容
  - else
    - @questions.each do |question|
      .question.generic-model
        .cell.title
          = link_to hspan(question.title), question
        .cell.teacher
          = question.teacher_user.real_name
        .cell.answered
          = question.has_answered? ? '已回答' : '未回答'

    = list_pagination(@questions)