- hbreadcrumb '首页', '/'
- hbreadcrumb '师生问答'

.page-questions
  - if current_user.is_student?
    %a.new{:href=>"/questions/new"} 提问题

  .page-tabs
    %a.tab.current{:href=>"/questions"} 全部
    %a.tab{:href=>"/questions?type=answered"} 已回答
    %a.tab{:href=>"/questions?type=unanswered"} 未回答


- if @questions.blank?
  .blank
    目前列表内没有内容
- else

  .page-paginate= will_paginate @questions

  .page-admin-models.questions
    = render 'question_list', :questions=>@questions