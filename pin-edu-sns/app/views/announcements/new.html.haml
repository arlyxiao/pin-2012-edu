= render 'nav'
- hbreadcrumb '创建新通知'

.page-admin-go-back= link_to '返回列表页', '/announcements'

.page-new-announcement
  = form_for @announcement do |f|
    = flash_info
    .field.placeholder.need
      %label 标题
      = f.text_field :title
    .field
      %label 正文
      = f.text_area :content, :class => 'kind-editor'
    .field.submit
      = jfsubmit '下一步'
