- hgoback '/'
- hbreadcrumb '首页', '/'
- hbreadcrumb '我的文件夹'
  

= page_top_fixed 'page-media-resources-head' do
  .page-media-resource-head
    %a.create-folder-button{:href=>'javascript:;'} 新建文件夹
    = jupload_button '上传文件'

  .page-media-resource-nav
    .go-parent-dir
      - if @current_dir.blank?
        %span.quiet 上一级
      - else
        :ruby
          url = @current_dir.dir.blank? ? '/file' : file_link(@current_dir.dir)
        %a{:href => url} 上一级

    .navs
      %span= link_to '根文件夹', '/file'
      - media_resource_navs_dirs(@current_dir).each do |dir|
        %span= link_to dir.name, file_link(dir)

= render 'media_resources/parts/create_folder_box', :current_dir=>@current_dir
= render 'media_resources/parts/upload_file_box', :current_dir=>@current_dir
= render 'media_resources/parts/resources', :resources=>@media_resources
