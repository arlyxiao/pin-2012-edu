:ruby
  teaching_plan = DemoModel::TEACHING_PLAN_1
  teaching_plan_title = teaching_plan.title
  teaching_plan_desc = teaching_plan.desc
  chapters = teaching_plan.chapters

- hgoback '/courses'
- hbreadcrumb '首页', '/'
- hbreadcrumb teaching_plan_title

.page-model-show
  .page-teaching-plan-show
    .head
      %h1.title= teaching_plan_title
      .description= teaching_plan.desc

    .chapters
      .chs
        - chapters.each do |chapter|
          .chapter
            .title= chapter.title
            .desc= chapter.desc
            .ops
              .count= "#{chapter.homeworks.count}作业"
              .check= link_to '查看作业', '/j3'
      