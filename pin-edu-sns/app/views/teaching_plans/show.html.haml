                  .edit= link_to '管理作业', 'javascript:;'
                  .count 0
                  .slides
                    .edit= link_to '管理课件', "/chapters/#{chapter.id}/edit"
                    .count 0
                  .publish.hide
                    .status 未发布
                    .edit= link_to '发布', 'javascript:;'
                  .remove= link_to '删除', chapter_path(chapter), :method => :delete

      .btns
