- hgoback '/courses'
- hbreadcrumb '首页', '/'
- hbreadcrumb 'Java程序设计', 'javascript:;'
- hbreadcrumb '教学方案'

.page-model-show
  .page-teaching-plan-show
    .head
      %h1.title= DemoModel::TEACHING_PLAN_1.title
      .description= DemoModel::TEACHING_PLAN_1.desc

    .chapters
      .chs
        - DemoModel::TEACHING_PLAN_1.chapters.each do |chapter|
          .chapter
            .title= chapter.title
            .desc= chapter.desc
            .items
              .homeworks
                .edit= link_to '管理作业', 'javascript:;'
                .count= 1 + rand(3)
              .slides
                .edit= link_to '管理课件', '/c1/show'
                .count= 1 + rand(3)
              .publish.hide
                .status 未发布
                .edit= link_to '发布', 'javascript:;'
              .remove= link_to '删除', 'javascript:;'

      .btns
        .create-button= link_to '新增章节', 'javascript:;'
        .preview-button= link_to "预览","/d1/show"
        .students
          .count 22个学生参与此方案
          .edit= link_to '分配', '/f1/show'
