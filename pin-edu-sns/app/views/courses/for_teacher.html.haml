- hbreadcrumb '首页', '/'
- hbreadcrumb '我的课程表'

.page-courses-table
  .table-title
    %span> #{current_user.real_name}
    - if current_user.is_teacher?
      %span> 老师，
    - if current_user.is_student?
      %span> 同学，
    %span> #{Semester.now.to_s} 学期课程表

  .field
    - 13.times do |number|
      .item.number
        = change_to_course_number(number)

  - 1.upto 7 do |weekday|
    :ruby
      weekday = weekday % 7
      weekday_label = change_to_weekday(weekday)
      klass = (Time.now.wday == weekday ? 'today' : '')

    .field
      .item.wd{:class=>klass}
        %span= weekday_label

      - 1.upto 12 do |number|
        :ruby
          course_label = change_to_course_number(number)
          course = get_teacher_course_by_weekday_and_number(@teacher_courses, weekday, number)

        - if course.blank?
          .item.blank
        - else
          .item.course
            = link_to course.name, "/courses/#{course.id}"
            