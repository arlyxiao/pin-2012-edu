- htitle '课程维护'

- hbreadcrumb '基础数据管理', '/admin'
- hbreadcrumb '课程维护'
  

.generic-page-head.admin-courses
  .btns
    %a.generic-new.create{:href=>'/admin/courses/new'} 增加课程
    %a.generic-new.import{:href=>'/admin/courses/import_from_csv_page'} 批量导入课程

  = list_pagination(@courses)

  .cells
    .cell.ops 操作
    .cell.name= sortable 'name', '课程'
    .cell.cid= sortable 'cid', '课程编号'

.generic-body-list.admin-courses
  - if @courses.blank?
    .blank
      目前列表内没有内容
  - else
    - @courses.each do |course|
      .generic-model
        .cell.ops
          - remove_url = admin_course_path(course)
          %a.remove{:href=>'javascript:;', :'data-url'=>remove_url} 删除
          %a.edit{:href=>"/admin/courses/#{course.id}/edit"} 编辑
          %a.open-teachers{:href=>'javascript:;'}
            %span.open 展开
            %span.close 收起
          %a.detail{:href=>"/admin/courses/#{course.id}"} 查看详情

        .cell.name
          = course.name
        .cell.cid
          = course.cid
