- courses.each do |course|
  - if is_grid == 'true'
    .course
      .cover
        = link_to admin_course_path(course) do
          = jimage course.cover, :width => 160, :height => 96
      .name= course.name
      .teacher= course.teacher.real_name

  - else
    :ruby
      teacher_name = course.teacher.blank? ? '未指定' : course.teacher.real_name

    .model
      .p
        .t 名称 
        .c=course.name
      .p
        .t 课序号 
        .c=course.cid
      .p
        .t 开课院系
        .c=course.department
      .p
        .t 上课地点
        .c=course.location
      .p
        .t 教师
        .c=teacher_name
        .ava=avatar User.new, :mini
      .p.l3
        .t 其他描述 
        .c=course.desc
      .detail=link_to "查看详情","/admin/courses/#{course.id}"
      .remove=link_to '删除', admin_course_path(course), :method => :delete, :confirm => '确定要删除？'
