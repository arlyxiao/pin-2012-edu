- teachers.each do |teacher|
  .model.teacher
    .avatar
      =avatar User.new, :medium
    .p
      .t 教师姓名
      .c=teacher.real_name
    .p
      .t 教师编号 
      .c=teacher.tid
    .p.l3
      .t 其他信息 
      .c

    .detail=link_to "查看详情","/admin/teachers/#{teacher.id}"
    .remove=link_to '删除', admin_teacher_path(teacher), :method => :delete, :confirm => '确定要删除？'
