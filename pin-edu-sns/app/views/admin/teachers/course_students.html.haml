- htitle '教师维护'

- hbreadcrumb '基础数据管理', '/admin'
- hbreadcrumb '教师维护', '/admin/teachers'
- hbreadcrumb @teacher.real_name
- hbreadcrumb @course.name + '学生列表'

.page-admin-model-show
  .field.avatar
    = avatar @teacher.user, :medium

  .data
    .field.name
      %label 教师姓名
      .v= @teacher.real_name

    .field.course
      %label 课程
      .v= @course.name

    .field.students
      %label 学生列表
      .v
        - @students.each do |student|
          .student= link_to student.real_name, admin_student_path(student)

.page-admin-go-back= link_to '返回教师详情', :back

