- htitle '教师维护'

- hbreadcrumb '基础数据管理', '/admin'
- hbreadcrumb '教师维护', '/admin/teachers'
- hbreadcrumb '修改教师密码'

.page-admin-form
  = flash_info
  = form_for [:password_submit, :admin, @teacher] do |t|
    = t.fields_for :user do |user_f|
      .field.need
        %label 密码
        = user_f.password_field :password, :value=>'', :maxlength=>32
      .field.need
        %label 确认密码
        = user_f.password_field :password_confirmation, :value=>'', :maxlength=>32
    .field.submit
      = jfsubmit '确定'
      = jfcancel '取消'

