.page-title 创建教师

.page-admin-form
  =flash[:error]
  =form_for [:admin,@teacher] do |t|
    .field
      %label 真实姓名
      =t.text_field :real_name
    .field
      %label 教师编号
      =t.text_field :tid
      = t.fields_for :user do |user_f|
        .field
          %label 电子邮箱
          = user_f.text_field :email,:maxlength=>50
        .field
          %label 用户名
          = user_f.text_field :name,:maxlength=>50
        .field
          %label 密码
          = user_f.password_field :password,:value=>'',:maxlength=>32
        .field
          %label 确认密码
          = user_f.password_field :password_confirmation,:value=>'',:maxlength=>32
    .field
      %a.form-submit-button{:href=>'javascript:;'} 确定创建
