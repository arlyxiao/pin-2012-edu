- htitle '教学计划'

- hbreadcrumb '基础数据管理', '/admin'
- hbreadcrumb '教学计划'
  
.generic-page-head.admin-teaching-plans
  .btns
    %a.generic-new.create{:href=>'/admin/teaching_plans/new'} 增加教学计划
    %a.generic-new.import{:href=>'/admin/teaching_plans/import_from_csv_page'} 批量导入

  = list_pagination(@teaching_plans)

  .cells
    .cell.ops 操作
    .cell.name= sortable 'title', '标题'

.generic-body-list.admin-teaching-plans
  - if @teaching_plans.blank?
    .blank
      目前列表内没有内容
  - else
    - @teaching_plans.each do |teaching_plan|
      .generic-model
        .cell.ops
          - remove_url = admin_teaching_plan_path(teaching_plan)
          %a.remove{:href=>'javascript:;', :'data-url'=>remove_url} 删除
          %a.edit{:href=>"/admin/teaching_plans/#{teaching_plan.id}/edit"} 编辑
          %a.open-teachers{:href=>'javascript:;'}
            %span.open 展开
            %span.close 收起
          %a.detail{:href=>"/admin/teaching_plans/#{teaching_plan.id}"} 查看详情

        .cell.title
          = teaching_plan.title
