- htitle '教学计划'

- hbreadcrumb '基础数据管理', '/admin'
- hbreadcrumb '教学计划', '/admin/teaching_plans'
- hbreadcrumb @teaching_plan.title


.page-unfixed-head
  = page_buttons do |p|
    = p.button '返回列表页', '/admin/teaching_plans'
    = p.button '修改信息', "/admin/teaching_plans/#{@teaching_plan.id}/edit"



.page-model-show

  .page-admin-course

    = page_field :'plan-info', :title=>'标题' do
      = @teaching_plan.title

    = page_field :'plan-info', :title=>'课程列表' do
      - @teaching_plan.courses.each do |course|
        = course.name
