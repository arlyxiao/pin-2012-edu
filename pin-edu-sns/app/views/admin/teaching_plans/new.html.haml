- htitle '教学计划'

- hgoback admin_teaching_plans_path
- hbreadcrumb '首页', '/admin'
- hbreadcrumb '教学计划', admin_teaching_plans_path
- hbreadcrumb '增加教学计划'
  
.page-admin-form
  = flash_info
  = form_for [:admin, @teaching_plan] do |t|
    .field
      %label 计划标题
      = t.text_field :title

    .field
      - Course.all.each do |course|
        = jcheckbox 'teaching_plan[teaching_plan_courses_attributes][][course_id]', course.id, false, course.name

    .field.submit
      = jfsubmit '确定'
      = jfcancel '取消'
