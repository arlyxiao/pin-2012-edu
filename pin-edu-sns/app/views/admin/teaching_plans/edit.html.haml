- htitle '教学计划'

- hbreadcrumb '基础数据管理', '/admin'
- hbreadcrumb '教学计划', '/admin/teaching_plans'
- hbreadcrumb '编辑教学计划'
  

.page-admin-ops
  %a.create{:href=>'/admin/teaching_plans/new'} 增加计划
  %a.import{:href=>'/admin/teaching_plans/import_from_csv_page'} 批量导入


.page-admin-form
  = flash_info
  = form_for [:admin, @teaching_plan] do |t|
    .field
      %label 计划标题
      = t.text_field :title

    .field
      - Course.all.each do |course|
        :ruby
          checked = false
          if @teaching_plan.courses.include?(course)
            checked = true
          end

        = jcheckbox 'courses[]', course.id, checked, course.name

    .field.submit
      = jfsubmit '确定'
      = jfcancel '取消'
