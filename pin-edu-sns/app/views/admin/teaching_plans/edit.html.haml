- htitle '教学计划'

- hgoback admin_teaching_plans_path
- hbreadcrumb '首页', '/admin'
- hbreadcrumb '教学计划', admin_teaching_plans_path
- hbreadcrumb '编辑教学计划'
  
.page-model-form
  = flash_info
  = form_for [:admin, @teaching_plan] do |t|
    .field
      %label 计划标题
      = t.text_field :title

    .field
      %label 学期
      = semester_selector(t, @teaching_plan.semester.value)

    .field
      %label 正文
      = t.text_area :content, :class => 'kind-editor'

    .field.submit
      = jfsubmit '确定'
      = jfcancel '取消'
