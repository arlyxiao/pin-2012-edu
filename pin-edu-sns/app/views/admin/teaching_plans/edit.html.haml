- htitle '教学计划'

- hgoback admin_teaching_plans_path
- hbreadcrumb '首页', '/admin'
- hbreadcrumb '教学计划', admin_teaching_plans_path
- hbreadcrumb '编辑教学计划'
  
.page-model-form
  = flash_info
  = form_for [:admin, @teaching_plan] do |t|
    .field
      %label 计划标题
      = t.text_field :title

    .field
      - Course.all.each do |course|
        :ruby
          checked = false
          if @teaching_plan.courses.include?(course)
            checked = true
          end

        = jcheckbox 'courses[]', course.id, checked, course.name

    .field.submit
      = jfsubmit '确定'
      = jfcancel '取消'
