- students.each do |student|
  .model.teacher
    .avatar
      =avatar User.new, :medium
    .p
      .t 学生姓名
      .c=student.real_name
    .p
      .t 学生编号 
      .c=student.sid
    .p.l3
      .t 其他信息 
      .c

    .detail=link_to "查看详情","/admin/students/#{student.id}"
    .remove=link_to '删除', admin_student_path(student), :method => :delete, :confirm => '确定要删除？'
