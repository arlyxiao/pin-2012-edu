- htitle '通知管理'

- hbreadcrumb '基础数据管理', '/admin'
- hbreadcrumb '通知管理'

.generic-page-head.admin-announcements
  .btns
    = link_to '创建通知', new_admin_announcement_path, :class => 'generic-new create'

  = list_pagination(@announcements)

  .cells
    .cell.ops 操作
    .cell.title= sortable 'title', '标题'
    .cell.creator 发布人

.generic-body-list.admin-announcements
  - if @announcements.blank?
    .blank
      目前列表内没有内容
  - else
    - @announcements.each do |announcement|
      .generic-model
        .cell.ops
          - remove_url = admin_announcement_path(announcement)
          %a.remove{:href=>'javascript:;', :'data-url'=>remove_url} 删除
          %a.detail{:href=>"/admin/announcements/#{announcement.id}"} 详情
        .cell.title
          = announcement.title
        .cell.creator
          = announcement.creator.real_name
