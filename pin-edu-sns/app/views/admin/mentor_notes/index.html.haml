- htitle '课程维护'

- hbreadcrumb '基础数据管理', '/admin'
- hbreadcrumb '导师双向选择'

.generic-page-head.admin-mentor-notes
  .btns
    %a.generic-new.create{:href=>'/admin/mentor_notes/new'} 增加导师选择

  = table_pagination(@mentor_notes)

  .cells
    .cell.ops 操作
    .cell.title= sortable 'title', '标题'

.generic-body-list.admin-mentor-notes
  - if @mentor_notes.blank?
    .blank
      目前列表内没有内容
  - else
    - @mentor_notes.each do |mentor_note|
      .generic-model
        .cell.ops
          - remove_url = admin_mentor_note_path(mentor_note)
          %a.remove{:href=>'javascript:;', :'data-url'=>remove_url} 删除
          %a.edit{:href=>"/admin/mentor_notes/#{mentor_note.id}/edit"} 编辑
          %a.detail{:href=>"/admin/mentor_notes/#{mentor_note.id}"} 查看详情
        .cell.title
          = mentor_note.title
