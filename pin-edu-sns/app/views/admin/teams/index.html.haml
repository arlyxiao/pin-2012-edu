- htitle '班级维护'

- hbreadcrumb '基础数据管理', '/admin'
- hbreadcrumb '班级维护'

.page-fixed-head
  = page_buttons do |p|
    = p.button '增加班级', '/admin/teams/new'
    = p.button '批量导入班级', '/admin/teams/import_from_csv_page'

:ruby
  cols_hash = {
    :ops => 1,
    :name => 3,
    :cid => 2
  }

.page-list-head
  .headtop
    = page_buttons do |p|
      = p.batch_destroy Team

    = list_pagination(@teams)

  = page_list_head :cols=>cols_hash do |p|
    = p.checkbox
    = p.cell :ops, '操作'
    = p.cell :name, '班级名', :sortable=>true
    = p.cell :cid, '班级编号', :sortable=>true

.page-model-list.admin-teams
  - if @teams.blank?
    .blank
      目前列表内没有内容
  - else
    - @teams.each do |team|
      = page_list_body :cols=>cols_hash do |p|
        = p.checkbox(team)
        = p.cell :ops do
          %a.edit{:href=>"/admin/teams/#{team.id}/edit"} 编辑
        = p.cell :name do
          %a.detail{:href=>"/admin/teams/#{team.id}"}=team.name
        = p.cell :cid, team.cid
