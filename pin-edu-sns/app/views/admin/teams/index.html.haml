- htitle '班级维护'

- hbreadcrumb '基础数据管理', '/admin'
- hbreadcrumb '班级维护'

.generic-page-head.admin-teams
  .btns
    %a.generic-new.create{:href=>'/admin/teams/new'} 增加班级
    %a.generic-new.import{:href=>'/admin/teams/import_from_csv_page'} 批量导入班级
    .search
      = jsearchbar '/admin/search/team'

  = table_pagination(@teams)

  .cells
    .cell.ops 操作
    .cell.name= sortable 'name', '班级'
    .cell.cid= sortable 'cid', '班级编号'

.generic-body-list.admin-teams
  - if @teams.blank?
    .blank
      目前列表内没有内容
  - else
    - @teams.each do |team|
      .generic-model
        .cell.ops
          - remove_url = admin_team_path(team)
          %a.remove{:href=>'javascript:;', :'data-url'=>remove_url} 删除
          %a.edit{:href=>"/admin/teams/#{team.id}/edit"} 编辑
          %a.detail{:href=>"/admin/teams/#{team.id}"} 详情
        .cell.name
          = team.name
        .cell.cid
          = team.cid
