- htitle '班级维护'

- hgoback admin_teams_path
- hbreadcrumb '首页', '/admin'
- hbreadcrumb '基础数据', '/admin'
- hbreadcrumb '班级维护', admin_teams_path
- hbreadcrumb '修改班级信息'

.page-admin-form
  = flash_info
  = form_for [:admin,@team] do |f|
    .field.need
      %label 班级名
      = f.text_field :name
    .field.need
      %label 班级编号
      = f.text_field :cid
    .field.submit
      = jfsubmit '确定'
      = jfcancel '取消'