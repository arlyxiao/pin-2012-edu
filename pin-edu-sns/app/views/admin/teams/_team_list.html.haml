- teams.each do |team|
  :ruby
    teacher_name = team.teacher.blank? ? '未指定' : team.teacher.real_name
  .model.team
    .p
      .t 名称 
      .c=team.name
    .p
      .t 班级序号 
      .c=team.cid
    .p
      .t 教师
      .c=teacher_name
      .ava=avatar User.new, :mini
    .p.l3
      .t 其他描述 
      .c

    .detail=link_to "查看详情","/admin/teams/#{team.id}"
    .remove=link_to '删除', admin_team_path(team), :method => :delete, :confirm => '确定要删除？'
