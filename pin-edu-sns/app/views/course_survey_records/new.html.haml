- htitle '课程维护'

- hbreadcrumb '首页', '/'
- hbreadcrumb '课程调查', '/course_surveys'
- hbreadcrumb '增加课程调查'

.page-model-form
  = flash_info
  :ruby
    kind = params[:kind]
    case kind
    when '1'
      record = CourseSurveyRecord.new
      form = 'form_1'
    when '2'
      record = CourseSurveyEsRecord.new
      form = 'form_2'
    end

  = form_for record, :url => "/course_surveys/#{@course_survey.id}/course_survey_records?kind=#{kind}" do |f|
    
    =render form, :f => f