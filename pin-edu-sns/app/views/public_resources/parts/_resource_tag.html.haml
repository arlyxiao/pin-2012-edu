%span 标签:

.resource-tag-list
  .values{:style=>"float:left;",:"data-value"=>resource.tag_list.join(",")}
    - resource.tag_list.each do |tag_name|
      = link_to tag_name, "/tags/#{tag_name}", :style => 'padding:4px;'
  - if resource.creator == current_user
    = link_to "修改", 'javascript:;',:style=>"font-size:12px;",:class=>"edit-tag-form-button"

.resource-edit-tags-form{:style=>"display:none;"}
  = text_field_tag :tag, resource.tag_list * ",",:class=>"tag_names",:'data-url'=> update_tag_public_resource_path(resource)
  = link_to '确定', 'javascript:;', :class => 'submit'
  = link_to '取消', 'javascript:;', :class => 'cancel'
