:ruby
  tstr = ((yield :title) || '').gsub("\n",'')
  title = tstr.blank? ? 'SHCMRS ADMIN' : "#{tstr} - SHCMRS ADMIN"

!!! 5
%html{:lang=>'zh'}
  %head
    %meta{:charset=>'utf-8'}
    %title= title
    = csrf_meta_tags
    = stylesheet_link_tag 'application'

  %body.echo.gray
    - if logged_in?
      = mindpin_sidebar :admin

    .page-topbar
      = yield :topbar

      .current-user
        .name>
          %span> 系统管理员
        %a.setting{:href=>'/admin/setting/password'} 设置密码

        %a.logout{:href=>'/auth/logout'} 退出登录

    .page-content
      .page-breadcrumb
        = yield :breadcrumb
      = yield

    = yield :fbox

    = render 'layouts/parts/current_user_js_info'
    = javascript_include_tag '/kindeditor/kindeditor'
    = javascript_include_tag 'application'
    = yield :javascript