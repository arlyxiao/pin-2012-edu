%span=flash[:error]
=form_tag('/login',{:class=>'login-form'}) do
  %label 电子邮箱 / 用户名
  =text_field_tag     :email   ,params[:email]
  %label 密码
  =password_field_tag :password,params[:password]
  %span=check_box_tag :remember_me,params[:remember_me],true
  %span 下次记住我
  =submit_tag "登 陆"
=link_to "注册一个新账号",'/signup'
=link_to '我忘记密码了…', "/forgot_password"
