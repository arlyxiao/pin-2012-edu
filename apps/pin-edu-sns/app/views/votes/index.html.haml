-htitle '目前的所有投票'

:ruby
  votes_total_count = Vote.count
  current_user_voted_count = current_user.voted_votes.count

.page-title 创建和参与投票

.page-votes-ops
  %a.create{:href=>'/votes/new'} 发起新投票

.page-votes
  -@votes.each do |vote|
    :ruby
      creator = vote.creator
      can_delete = (creator == current_user)
      has_voted = vote.has_voted_by?(current_user)
      voted_users_count = vote.voted_users.count
    
    .vote
      .voted-users-count
        .t 参与人数
        .c=voted_users_count
      .ops
        -if can_delete
          =link_to '删除', vote, :confirm => '确定删除这个投票吗？', :method => :delete, :class => 'delete'
        
      .ct
        .title=link_to vote.title, vote
        .creator #{userlink vote.creator} 发起
