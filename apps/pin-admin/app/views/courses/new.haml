=flash[:error]
=form_for @course do |f|
  %div
    %label 名字
    =f.text_field :name
  %div
    %label 课程号
    =f.text_field :cid
  %div
    %label 开课院系
    =f.text_field :department
  %div
    %label 上课地点
    =f.text_field :department
  %div
    %label 教师
    =f.select(:teacher_id,Teacher.all.map{|teacher|[teacher.real_name,teacher.id]}.unshift(["不指定",""]))
    =link_to "新建教师","/teachers/new"
  %div
    %label 备注
    =f.text_area :desc
  %div
    =f.submit "创建"
    
		
